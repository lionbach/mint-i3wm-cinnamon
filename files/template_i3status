# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!


general {
  interval = 1
  colors = false
  #separator = ""
  markup = "pango"
}

#order += "wireless _first_"
#order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
#order += "disk /"
order += "volume master"
order += "battery all"
order += "tztime date"
order += "tztime hour"

wireless _first_ {
  format_up = " %ip - %quality at %essid"
  format_down = ""
}

ethernet _first_ {
  format_up = " %ip"
  format_down = ""
}

cpu_usage {
  format = " %usage"
}

memory {
  format = " %percentage_used" 
}

disk "/" {
  format = " %percentage_used"
}

volume master {
  format = "<span font='Font Awesome 6 Free Regular'></span> %volume"
  format_muted = "<span font='Font Awesome 6 Free Regular'></span> %volume"
  device = "pulse"
}

battery all {
  format = "" 
  status_chr = " %percentage"
  status_bat = " %percentage"
  status_unk = "? %percentage"
  status_full = " %percentage"
  format_down = ""
  integer_battery_capacity = true
}

tztime date {
  format = " %d %b"
}

tztime hour {
  format = " %H:%M    "
}
